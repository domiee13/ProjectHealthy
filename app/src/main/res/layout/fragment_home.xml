<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/vani"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/justmeagaindownhere_regular"
        android:text="Hello mtf"
        android:textColor="@color/darkgreen"
        android:textSize="60dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="-3dp" />

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:layout_width="355dp"
        android:layout_height="145dp"
        android:background="#F9EBC8"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="79dp">
        <TextView
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/textgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng kcal thức ăn"/>
        <TextView
            android:id="@+id/tvTong"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/textgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thong so"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rview"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="355dp"
        android:layout_height="290dp"
        android:background="@color/darkvani"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="262dp" />

    <Button
        android:id="@+id/btAdd"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button"
        android:text="Add"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="580dp" />
</LinearLayout>